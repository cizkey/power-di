{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "lib",
        "sourceMap": true,
        "pretty": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compileOnSave": true
}
